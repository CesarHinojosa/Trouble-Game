<Window x:Class="Trouble.WPFUI.GamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trouble.WPFUI"
        mc:Ignorable="d"
        Title="GamesWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgGames" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,312" SelectionChanged="dgGames_SelectionChanged"/>
        <Button x:Name="btnCreate" Content="Create Game" HorizontalAlignment="Left" Margin="129,217,0,0" VerticalAlignment="Top" Width="136" Height="40" Click="btnCreate_Click"/>
        <Button x:Name="btnLogOut" Content="Log Out" HorizontalAlignment="Left" Margin="526,217,0,0" VerticalAlignment="Top" Width="136" Height="40" Click="btnLogOut_Click"/>
        <Button x:Name="btnComputer" Content="Play Against Computer" HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Width="136" Height="40" Click="btnComputer_Click"/>
        <Label x:Name="lblCreateGame" Content="Looking For Game" HorizontalAlignment="Center" Margin="0,278,0,0" VerticalAlignment="Top" Width="152" FontSize="16" Visibility="Hidden"/>
    </Grid>
</Window>
