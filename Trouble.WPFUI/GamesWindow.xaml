<Window x:Class="Trouble.WPFUI.GamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trouble.WPFUI"
        mc:Ignorable="d"
        Title="GamesWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgGames" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,312" SelectionChanged="dgGames_SelectionChanged"/>
    </Grid>
</Window>
