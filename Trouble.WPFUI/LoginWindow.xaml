<Window x:Class="Trouble.WPFUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trouble.WPFUI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="426" Width="762">
    <Grid Margin="0,0,0,-6">
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="191,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="191,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogin" Content="Button" HorizontalAlignment="Left" Margin="221,217,0,0" VerticalAlignment="Top" Height="35" Width="60" Click="btnLogin_Click"/>

    </Grid>
</Window>
